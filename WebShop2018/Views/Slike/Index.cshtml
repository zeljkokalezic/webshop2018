@model IEnumerable<WebShop2018.Models.Slika>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.NazivSlike)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpisSlike)
        </th>
        <th>Naziv Proizvoda</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@string.Format("/Content/Artikli/{0}", item.NazivSlikeZaPrikaz)" style="width:100px;">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NazivSlike)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpisSlike)
        </td>
        <td>@Html.DisplayFor(modelItem => item.Proizvod.Naziv)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
