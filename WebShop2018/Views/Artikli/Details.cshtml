@using WebShop2018.Models
@model WebShop2018.Models.Proizvod

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Proizvod</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Naziv)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cena)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cena)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Stanje)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stanje)
        </dd>
        <dd>
            @if (User.IsInRole(RolesConfig.ADMIN))
            {
            @Html.ActionLink("Add New Picture", "AddPicture", new { id = Model.Id })
            }
        </dd>
        

    </dl>
</div>


<table class="table">
    <tr>
        @foreach (var item in Model.slike)
        {

            <td>
                <img src="@string.Format("/Content/vezbaSlike/{0}{1}",item.proizvod.Id,item.Naziv)" width="200" height="200" />
                <br />
                <p>Opis : @item.Opis</p>
                @if (User.IsInRole(RolesConfig.ADMIN))
                {
                    @Html.ActionLink("Edit", "EditPicture", new { id = item.Id })
                    @Html.Raw("|")
                    @Html.ActionLink("Delete", "DeletePicture", new { id = item.Id })
                }
            </td>
        }
    </tr>
</table>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
