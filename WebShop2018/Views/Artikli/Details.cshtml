<br />
<br />

<div class="container">
        <div class="row">
            @foreach (var slika in Model.Slike)
            {
                <div class="col-md-3" style="margin-bottom:100px; text-align:center;">
                    <a href="@string.Format("/Content/Artikli/{0}", slika.NazivSlikeZaPrikaz)" data-fancybox="gallery">
                        <img src="@string.Format("/Content/Artikli/{0}", slika.NazivSlikeZaPrikaz)" style="width:60%;">
                    </a>
                    <p style="margin-top:10px;">@Html.DisplayFor(s => slika.OpisSlike)</p>
                </div>
            }
        </div>
    </div>



<p>
